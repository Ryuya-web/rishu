<%= stylesheet_link_tag "lessons/lessons", :media => "all" %>
<%= stylesheet_link_tag "application", :media => "all" %>
<div class="col-md-3 col-xs-12" >
<ul class="note">
<li><a>情報コミュニケーション学部</a></li>
</ul>
</div>
<div class="col-md-7 col-xs-12" >
<div class="topic">
<h1> Meify</h1>
<p>明治大学授業評価掲示板</p>
</div>
<div class="ribbon5">
 <h3><%= link_to "授業に関する評価や感想を投稿する", new_lessonse_path%></h3>
</div>
<p></p>
<div class="ribon">
<div class="ribbon9">
<h3>新着授業評価情報</h3>
</div>
</div>
    <% @lessonses.each do |lessonse|%>
    <div class="box10">
    <p><%=lessonse.created_at.to_s(:datetime_jp)%></p>
    <h4>教授名</h4>
    <p class="t"><%= link_to lessonse.teacher_name,lessonse_path(lessonse.id)%></p>
    <p>-----------------------------------------------------------------------------------------------------</p>
    <h4>授業名</h4>
    <p class="t"><%= link_to lessonse.title, lessonse_path(lessonse.id)%></p>
    <p>-----------------------------------------------------------------------------------------------------</p>
    <h4>授業評価</h4>
    <div class="box14">
    <span><%=lessonse.body%></span>
    </div>
    </div>
    <%end%>
    <%= paginate @lessonses %>
    <%= link_to :back do %>
        <button>戻る</button>
    <% end %>
</div>

<div class="col-md-2 col-xs-12">
<div class="box25">
<h3>Ranking  <i class="fas fa-crown"></i></h3>
<% @all_ranks.each.with_index(1) do |rank, i|%>
<p>第<%=i%>位</p>
<p><%= link_to rank.title, lessonse_path(rank.id)%> <%= rank.likeses.count%>いいね</p>
<%end%>
</div>
</div>


