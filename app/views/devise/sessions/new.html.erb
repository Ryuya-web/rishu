
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                    <div class="form-header text-center">
                        <h2 class="form-header-title">ユーザーログイン</h2>
                    </div>
                    <div class="form-body">

                      <div class="row">
                          <div class="col-xs-offset-1 col-xs-10">
                              <div class="text-center">
                                  <h5>名前とパスワードを入力してください。</h5>
                              </div>
                          </div>
                      </div>
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="form">
                            <div class="field" class="col-md-12">
                                <%= f.label "name" %><br />
                                 <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前"%>
                            </div>
                            
                            </div>
                            <div class="form-password">
                            <label>Password</label>
                            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
                            <span></span>
                            </div>
                            <%= f.submit "サインイン", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                        <% end %>  
                        </div>


                    </div>
                </div>
            </div>
        </div>

